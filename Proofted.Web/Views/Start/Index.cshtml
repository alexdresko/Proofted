{
	<script type="text/javascript" src="~/Scripts/knockout-2.2.0.debug.js"> </script>
	<script type="text/javascript" src="~/Scripts/q.js"> </script>
	<script type="text/javascript" src="~/Scripts/toastr.js"> </script>
	<script type="text/javascript" src="~/Scripts/knockout.validation.js"> </script>
	<script type="text/javascript" src="~/Scripts/knockthrough.js"> </script>
	<script type="text/javascript" src="~/Scripts/breeze.debug.js"> </script>
	<script type="text/javascript" src="~/Scripts/knockout.mapping-latest.js"> </script>

	<link rel="stylesheet" type="text/css" href="~/Content/knockthrough.css" />

	
	<script type="text/javascript" src="~/Scripts/require.js"> </script>
	<script type="text/javascript">
		var opts = new knockthrough.monitorOptions();
		// pass an instance of knockout
		opts.ko = ko;
		// kickoff the monitor before ko.applyBindings
		var monitor = new knockthrough.monitor(opts);

		require([
			"Scripts/Proofted/StartMain"
		]);
	</script>
